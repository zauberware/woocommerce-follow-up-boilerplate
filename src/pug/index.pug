extends layout
block body

    table.showInBrowser
        tbody
            tr
                td.showInBrowser__padding
                    table.wrapper(width='960' align='center')
                        tbody
                            tr
                                td
                                    a.color--white(href='{section:weblink}') {section:weblink_text}

    table.heroImage
        tbody
            tr
                td.heroImage__bgImage {section:intro_image_1024px-wide}

    table.heyUser
        tbody
            tr
                td.heyUser__padding(width='100%')
                    table.wrapper(width='960' align='center')
                        tbody
                            tr
                                td.td--alignMiddle(width='218' align='left')
                                    table
                                        tbody
                                            tr
                                                td.heyUser__image {section:welcome_image_135px-wide}
                                            tr
                                                td.heyUser__productName
                                                    span {section:welcome_caption}

                                td(width='712' align='right')
                                    table(border='0' cellpadding='0' cellspacing='0' width='100%')
                                        tbody
                                            tr
                                                td
                                                    h1 {section:welcome_title}
                                            tr
                                                td
                                                    .heyUser__paragraph {section:welcome_text}

    table.relatedProducts( width='100%' align='center')
        tbody
            tr
                td(align='center')
                    table.wrapper(width='960')
                        tbody
                            tr
                                - var index = 1
                                td.relatedProducts__boxRow1
                                    include includes/product-box
                                - var index = 2
                                td.relatedProducts__boxRow1
                                    include includes/product-box
                                - var index = 3
                                td.relatedProducts__boxRow1
                                    include includes/product-box

    table.features
        tbody
            tr
                td(align='center')
                    table.wrapper(width='960' align='center')
                        tbody
                            tr
                                td.features__title(colspan='3')
                                    h1 {section:teaser_title}

                            tr
                                td.features__feature(width='33.333%')
                                    | {section:teaser_1_image}
                                    h3 {section:teaser_1_title}
                                    p {section:teaser_1_text}

                                td.features__feature(width='33.333%')
                                    | {section:teaser_2_image}
                                    h3 {section:teaser_2_title}
                                    p {section:teaser_2_text}

                                td.features__feature(width='33.333%')
                                    | {section:teaser_3_image}
                                    h3 {section:teaser_3_title}
                                    p {section:teaser_3_text}

    table.ctaCards( width='100%' align='center')
        tbody
            tr
                td.ctaCards__padding(align='center')
                    table.wrapper(width='960')
                        tbody
                            tr
                                td.ctaCards__card.ctaCards__card--1(width='31.25%')
                                    table
                                        tbody
                                            tr
                                                td.ctaCards__card__inside
                                                    | {section:feature_image_1}
                                                    h4 {section:feature_title_1}
                                                    p {section:feature_text_1}
                                                    a(href='{section:feature_link_1}') {section:feature_label_1}

                                td.ctaCards__card.ctaCards__card--2(width='31.25%')
                                    table
                                        tbody
                                            tr
                                                td.ctaCards__card__inside
                                                    | {section:feature_image_2}
                                                    h4 {section:feature_title_2}
                                                    p {section:feature_text_2}
                                                    a(href='{section:feature_link_2}') {section:feature_label_2}

                                td.ctaCards__card.ctaCards__card--3(width='31.25%')
                                    table
                                        tbody
                                            tr
                                                td.ctaCards__card__inside
                                                    | {section:feature_image_3}
                                                    h4 {section:feature_title_3}
                                                    p {section:feature_text_3}
                                                    a(href='{section:feature_link_3}') {section:feature_label_3}

    table.social( width='100%' align='center')
        tbody
            tr
                td
                    a.facebook(href='https://www.facebook.com/'): span Facebook
                    a.instagram(href='https://www.instagram.com/'): span Instagram
                    a.twitter(href='https://twitter.com'): span Twitter
                    a.pinterest(href='https://www.pinterest.com/'): span Pinterest

    table.payment( width='100%' align='center')
        tbody
            tr
                td.payment__padding
                    table.wrapper(width='960')
                        tbody
                            tr
                                td
                                    table.payment__text(align='left')
                                        tbody
                                            tr
                                                td Comfortable shopping and easy payment
                                    table.payment__small(align='right')
                                        tbody
                                            tr
                                                td *All prices including 19% VAT, excluding&nbsp;
                                                    a(href='https://www.your-custom-domain.com/versandkosten/') shipping costs

                            tr
                                td.payment__icons
                                    .paymentMethod.paypal
                                        img(src='./img/paypal.png' width='79' height='50' alt='Paypal')

                                    .paymentMethod.hasBg.cards
                                        span Credit Card (Stripe)

                                    .paymentMethod.hasBg.transfer
                                        span
                                            img(src='./img/payment-check.png' width='16' height='16' alt='')
                                            | Advance payment / Transfer

    table.footer( width='100%' align='center')
        tbody
            tr
                td.footer__padding
                    table.wrapper(width='960')
                        tbody
                            tr
                                td.
                                    Copyright Â© Your Company, All rights reserved <br>
                                    You are receiving this email because you subscribed to our newsletter.

                            tr
                                td.footer__topPadding.
                                    Your Company <br>
                                    Street <br>
                                    City 12345 <br>
                                    Country
                            tr
                                td.footer__topPadding {section:unsubscribe_text}
